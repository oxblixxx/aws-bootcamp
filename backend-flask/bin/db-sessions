#! /usr/bin/bash

if [ "$1" == "prod" ]; then
    echo "using production db"
    URL=$PROD_CONNECTION_URL
else 
    echo "using in development db"
    URL=$CONNECTION_URL
fi


NO_URL=$(sed 's/\/cruddur//g' <<<"$URL")
$NO_URL -c "select pid as process_id, \
       usename as user,  \
       datname as db, \
       client_addr, \
       application_name as app,\
       state \
from pg_stat_activity;"